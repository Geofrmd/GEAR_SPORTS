<div class="container p-5">

  <h3 class="mt-5 border-bottom"> My booking requests</h3>
    <% @bookings.each do |booking| %>
      <div class="card-booking">
        <%= image_tag (booking.offer.picture_url.split(",").first)%>
        <div class="card-booking-infos">
          <h2><%=booking.offer.title%></h2>
          <p><%=booking.start_date%> - <%=booking.end_date%></p>
        </div>
        <div class="btn-confirm">
          <h5>ACCEPT</h5>
        </div>
        <div class="btn-decline">
          <h5>DECLINE</h5>
        </div>
      </div>
    <% end %>

  <h3 class="mt-5 border-bottom"> My offers - (<%=@my_offers.count%>)</h3>

    <div class="cards mt-5">
        <% @my_offers.each do |offer| %>
              <div class="card-offer">
                <%= image_tag (offer.picture_url.split(",").first) %>
                <div class="card-offer-infos">
                  <div>
                    <h2><%= link_to offer.title, offer_path(offer)  %></h2>
                    <h3><%= offer.location %></h3>
                    <h4 class="card-offer-pricing"><%= offer.price %> € / day</h4>
                    <i class="far fa-heart card-heart"></i>
                  </div>
                </div>
              </div class="mb-5">
        <%end %>
  </div>

  <h3 class="mt-5 border-bottom">My bookings </h3>
    <div class="cards mt-5">
  <% @bookings.each do |booking| %>
        <div class="card-offer">
          <%= image_tag (booking.offer.picture_url.split(",").first) %>
          <div class="card-offer-infos">
            <div>
              <h2><%= booking.offer.title %></h2>
              <h3><%= booking.offer.location %></h3>
              <% %>
              <% length = (booking.end_date - booking.start_date).to_i %>
              <% total = length * booking.offer.price %>
              <div><%= total %> €</div>
              <i class="far fa-heart card-heart"></i>
              <% if booking.status = "pending" %>
              <% then %>
                <div class="btn-status btn-pending">
                  <h5>Pending confirmation</h5>
                </div>
              <% else %>
                <div class="btn-status btn-confirmed">
                  <h5>Booking confirmed</h5>
                </div>
              <% end %>
            </div>
          </div>
        </div class="mb-5">
  <%end %>
  </div>
</div>
