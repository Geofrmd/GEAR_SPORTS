<div class="container">
  <h2><%= @offer.title %>-<%=@offer.location %></h2>

  <div>
    <%@offer.picture_url.split(",").each do |picture| %>
      <img src=<%=picture%>  alt="img-product">
    <% end %>

  </div>
  <div>
  <p>Sport category</p>
  <p><%=@offer.sport_category%></p>
  </div>
  <div>
  <p>Description</p>
  <p><%=@offer.description%></p>
  </div>

  <div class ="form mt-3 p-3">
    <h5 class="my-3 fw-bolder">Ajoutez des dates pour voir le prix</h5>
    <%= simple_form_for [@offer, @booking] do |f| %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.submit "Vérifier la disponibilité", class: "btn btn-primary form-btn" %>
    <% end %>
  </div>
</div>
