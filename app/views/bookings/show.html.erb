<div class="container p-5">
  <br>
  <br>
  <br>
  <div class="mb-5">
    <h2><%= link_to "<    Demande de réservation", offer_path(@offer), class:"text-decoration-none" %></h2>
  </div>

  <div class="d-flex justify-content-between">

    <div class="dates_et_confirmation" style="width: 600px">
      <div class="d-flex justify-content-between border-bottom border-top border-secondary pb-4">
        <div class="flex-fill mt-3">
          <h4>Votre réservation</h4>
          <div class="d-flex justify-content-between mt-3">
            <div>
              <h5>Dates</h5>
              <p><%= @booking.start_date %> - <%= @booking.end_date %> </p>
            </div>
            <h5><%= link_to "Modifier", offer_path(@offer) %></h5>
          </div>
        </div>

      </div>

      <div class="mt-3">
        <p class="btn btn-success mt-3"><%= link_to "Confirmer la réservation", offers_path, class:"text-decoration-none bl" %></p>
      </div>
    </div>

    <div class="border" style="border-radius: 5px">

      <div class="d-flex justify-content-start pb-2 m-4">
        <div style="width: 150px">
          <%= image_tag (@offer.picture_url.split(",").first), style:"width: 150px"%>
        </div>
        <div class="container" style="margin: auto">
          <h5><%= @offer.title %></h5>
          <h6><%= @offer.location %></h6>
        </div>
      </div>

      <div class="border-bottom border-top border-secondary py-2 m-4">
        <h4>Détails du prix</h4>
        <div class="d-flex justify-content-between">
          <% length = (@booking.end_date - @booking.start_date).to_i %>
          <% total = length * @offer.price %>
          <div><%= @offer.price %> x <%=length %> jours</div>
          <div><%= total %> €</div>
        </div>
      </div>
      <div class="d-flex justify-content-between pt-2 price_total m-4">
        <div>Total</div>
        <div><%= total %> €</div>
      </div>
    </div>
  </div>
</div>
