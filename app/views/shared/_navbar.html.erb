<div class="navbar navbar-expand-sm navbar-light navbar-lewagon container-fluid">
  <%= link_to offers_path, class: "navbar-brand" do %>
    <%= image_tag "gear-sport-logo.png" %>
  <% end %>
  <%if current_user && params[:controller] == "offers" && params[:action] == "index"  %>
    <nav class="navbar">
      <div class="hello">
        <form class="d-flex me-5" role="search">
        <%= form_with url: offers_path, method: :get, class: "d-flex me-2 " do %>
          <%= text_field_tag :query, params[:query], class: "search-form", placeholder: "Votre recherche..." %>
          <button class="btn btn-outline-success ms-2 btn-style" type="submit">Search</button>
        <% end %>
        </form>
      </div>
    </nav>
  <% end %>
  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav me-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= image_tag "https://avatars.githubusercontent.com/u/122464388?v=4", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
            <%= link_to "Create an offer", new_offer_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item btn btn-outline-ligh">
          <%= link_to "S'inscrire | Se connecter", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
